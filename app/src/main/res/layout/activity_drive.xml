<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dlog"
    tools:context="com.example.fazlulhoque.iiucbustracking.Driver.DriveActivity"
    android:id="@+id/rootLayout">



    <Button
        android:id="@+id/btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        tools:ignore="HardcodedText"
        android:background="@drawable/btn_driveruser"
        android:textColor="#ffffff"
        android:layout_marginStart="54dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="200dp" />
    <Button
        android:id="@+id/btnRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_driveruser"
        android:textColor="#ffffff"
        android:text="Register"
        tools:ignore="HardcodedText"
        android:layout_alignBaseline="@+id/btnLogin"
        android:layout_alignBottom="@+id/btnLogin"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="57dp" />
        <!--android:layout_below="@+id/eDriverLoginId"
        android:layout_alignStart="@+id/eDriverLoginId" />-->
</RelativeLayout>
