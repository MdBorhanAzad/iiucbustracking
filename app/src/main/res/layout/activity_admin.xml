<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.fazlulhoque.iiucbustracking.Admin.Admin">

    <EditText
        android:id="@+id/eAdminID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="34dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Email" />

    <EditText
        android:id="@+id/eAdminpass"
        android:hint="Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/eAdminID"
        android:layout_below="@+id/eAdminID"
        android:layout_marginTop="43dp"
        android:ems="10"
        android:inputType="textPersonName"
         />

    <Button
        android:id="@+id/btnAdminLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/eAdminpass"
        android:layout_below="@+id/eAdminpass"
        android:layout_marginEnd="61dp"
        android:layout_marginTop="92dp"
        android:text="Login" />

    <Button
        android:id="@+id/butRegistration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btnAdminLogin"
        android:layout_below="@+id/btnAdminLogin"
        android:layout_marginTop="47dp"
        android:text="REGISTRATION" />
</RelativeLayout>
